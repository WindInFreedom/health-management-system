# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# 替换本地内容：设置为True使用MySQL，False使用SQLite
USE_MYSQL=False
MYSQL_DATABASE=health_management
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_HOST=localhost
MYSQL_PORT=3307

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# Redis for Channels (optional, for production)
REDIS_HOST=localhost
REDIS_PORT=6379

# S3-Compatible Object Storage (for avatar uploads)
# 替换本地内容：设置为True启用S3存储
USE_S3_STORAGE=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=health-management
AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# Logging
DJANGO_LOG_LEVEL=INFO

# DeepSeek AI API Configuration
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
